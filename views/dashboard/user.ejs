<!DOCTYPE html>
<html>
<head>
  <title>User Dashboard | SafeVoice</title>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
  margin: 0;
  font-family: "Times New Roman", Times, serif;
  min-height: 100vh;
  background:
    linear-gradient(
      rgba(0, 0, 0, 0.55),
      rgba(0, 0, 0, 0.55)
    ),
    url("/images/heroimg2.jpg");

  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

    .navbar {
      background: #360d25ef;
      padding: 15px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar h2 {
      color: white;
    }

    .navbar ul {
      list-style: none;
      display: flex;
      gap: 25px;
    }

    .navbar a {
      text-decoration: none;
      color: white;
      font-weight: bold;
      cursor: pointer;
    }

   
    .container {
      padding: 40px;
    }

    .section {
      display: none;
      background:  rgba(255, 255, 255, 0.877);
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 20px;
    }

    .section.active {
      display: block;
    }

    h3 {
      color:  #360d25ef;
    }

    input, textarea, select {
      width: 100%;
      padding: 12px;
      margin-bottom: 15px;
      font-size: 15px;
    }

    button {
      background: #360d25ef;
      color:  white;
      border: none;
      padding: 12px 18px;
      cursor: pointer;
      border-radius: 6px;
    }

    .issue {
      border-bottom: 1px solid #ccc;
      margin-bottom: 15px;
      padding-bottom: 10px;
    }

    .section p {
  font-size: 17px;
  line-height: 1.6;
}

.issue p {
  font-size: 16.5px;
}

h3 {
  font-size: 24px;
}
.toast {
  position: fixed;
  top: 25px;
  right: 25px;
  min-width: 260px;
  max-width: 360px;
  padding: 14px 20px;
  border-radius: 10px;
  font-size: 14.5px;
  font-weight: 500;
  color: white;
  z-index: 9999;
  box-shadow: 0 8px 25px rgba(0,0,0,0.25);
  animation: slideIn 0.4s ease, fadeOut 3s ease forwards;
}

.toast.success {
  background: linear-gradient(135deg, #2e7d32, #43a047);
}

.toast.error {
  background: linear-gradient(135deg, #c62828, #e53935);
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(30px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeOut {
  0%   { opacity: 1; }
  70%  { opacity: 1; }
  100% { opacity: 0; visibility: hidden; }
}

  </style>
</head>

<body>

<% if (typeof session !== "undefined" && session.success) { %>
  <div class="toast success"><%= session.success %></div>
<% } %>

<% if (typeof session !== "undefined" && session.error) { %>
  <div class="toast error"><%= session.error %></div>
<% } %>



<div class="navbar">
  <h2>SafeVoice</h2>
  <ul>
    <li><a onclick="showSection('home')">Home</a></li>
    <li><a onclick="showSection('report')">Report Issue</a></li>
    <li><a onclick="showSection('status')">My Issues</a></li>
    <li><a href="/logout">Logout</a></li>
  </ul>
</div>

<div class="container">

  <div id="home" class="section active">
    <h3>Welcome to SafeVoice</h3>
    <p>Report safety issues securely and track resolutions.</p>
  </div>


  <div id="report" class="section">
    <h3>Report an Issue</h3>

    <form method="POST" action="/user/issue" enctype="multipart/form-data">
      <input name="title" placeholder="Issue Title" required>
      <textarea name="description" placeholder="Describe the issue" required></textarea>

      <select name="category" required>
        <option value="">Select Category</option>
        <option>Harassment</option>
        <option>Domestic Violence</option>
        <option>Cyber Crime</option>
      </select>

     <input type="file" id="imageInput" name="images" multiple accept="image/*">
<div id="previewContainer" style="display:flex;gap:10px;flex-wrap:wrap;margin-top:10px;"></div>

<p style="font-size:13px;color:#555;">Maximum total size: 1MB</p>

<label style="display:flex;align-items:center;gap:8px;font-size:14px;">
  <input type="checkbox" name="is_anonymous" value="true">
  Report issue anonymously
</label>

      <button type="submit">Submit Issue</button>
    </form>
  </div>


<div id="status" class="section">
  <h3>My Issues</h3>

  <% if (issues && issues.length > 0) { %>
    <% issues.forEach(issue => { %>

      <div class="issue">

        <p><b>Title:</b> <%= issue.title %></p>
        <p><b>Category:</b> <%= issue.category %></p>
        <p><b>Status:</b> <%= issue.status %></p>

        <p style="font-size:14px; margin-top:6px; display:flex; gap:10px; align-items:center;">

  <span style="color:green;">
    <i class="fa-solid fa-circle-check"></i> Reported
  </span>

  <i class="fa-solid fa-arrow-right"></i>

  <span style="color:orange;">
    <i class="fa-solid fa-user-check"></i> Assigned
  </span>

  <i class="fa-solid fa-arrow-right"></i>

  <% if (issue.status === "Resolved") { %>
    <span style="color:green;">
      <i class="fa-solid fa-shield-check"></i> Resolved
    </span>
  <% } else { %>
    <span style="color:red;">
      <i class="fa-solid fa-clock"></i> Pending
    </span>
  <% } %>

</p>

        <% if (issue.solution_text) { %>
          <div style="margin-top:12px;padding:15px;border-radius:10px;
            background:#e8f5e9;border:2px solid #2e7d32;">

            <p style="color:#2e7d32;font-weight:bold;">
              ✔ Verified Resolution
            </p>

            <p><b>Solution:</b><br><%= issue.solution_text %></p>

            <% if (!issue.user_acknowledged) { %>
              <form method="POST" action="/user/acknowledge">
                <input type="hidden" name="issue_id" value="<%= issue.issue_id %>">
                <button style="margin-top:10px;">I have read this solution</button>
              </form>
            <% } else { %>
              <p style="color:#2e7d32;margin-top:10px;">
                You acknowledged this solution
              </p>
            <% } %>

          </div>
        <% } else { %>
          <p><i> Solution pending from resolver</i></p>
        <% } %>
     

       <% if (issue.status !== "Resolved") { %>
  <div style="margin-top:10px; display:flex; gap:10px;">

    <form method="GET" action="/user/issue/edit">
      <input type="hidden" name="issue_id" value="<%= issue.issue_id %>">
      <button style="background:#af760c;">
        <i class="fa-solid fa-pen"></i> Edit
      </button>
    </form>

    <form method="POST" action="/user/issue/delete"
          onsubmit="return confirm('Are you sure you want to delete this issue?');">
      <input type="hidden" name="issue_id" value="<%= issue.issue_id %>">
      <button style="background:#b71c1c;">
        <i class="fa-solid fa-trash"></i> Delete
      </button>
    </form>

  </div>
<% } %>


      </div>

    <% }) %>
  <% } else { %>
    <p>No issues reported yet.</p>
  <% } %>
</div>



</div>

<script>
function showSection(id) {
  document.querySelectorAll(".section").forEach(s => {
    s.classList.remove("active");
  });
  document.getElementById(id).classList.add("active");
}

const imageInput = document.getElementById("imageInput");
const previewContainer = document.getElementById("previewContainer");

let selectedFiles = [];

imageInput.addEventListener("change", () => {
  previewContainer.innerHTML = "";
  selectedFiles = Array.from(imageInput.files);

  selectedFiles.forEach((file, index) => {
    const reader = new FileReader();

    reader.onload = (e) => {
      const wrapper = document.createElement("div");
      wrapper.style.position = "relative";
      wrapper.style.display = "inline-block";

      const img = document.createElement("img");
      img.src = e.target.result;
      img.style.width = "120px";
      img.style.height = "120px";
      img.style.objectFit = "cover";
      img.style.borderRadius = "8px";

      const removeBtn = document.createElement("span");
      removeBtn.innerHTML = "✖";
      removeBtn.style.position = "absolute";
      removeBtn.style.top = "5px";
      removeBtn.style.right = "5px";
      removeBtn.style.cursor = "pointer";
      removeBtn.style.background = "rgba(0,0,0,0.7)";
      removeBtn.style.color = "white";
      removeBtn.style.padding = "2px 6px";
      removeBtn.style.borderRadius = "50%";

      removeBtn.onclick = () => {
        selectedFiles.splice(index, 1);
        updateFileInput();
      };

      wrapper.appendChild(img);
      wrapper.appendChild(removeBtn);
      previewContainer.appendChild(wrapper);
    };

    reader.readAsDataURL(file);
  });
});

function updateFileInput() {
  const dataTransfer = new DataTransfer();
  selectedFiles.forEach(file => dataTransfer.items.add(file));
  imageInput.files = dataTransfer.files;

  previewContainer.innerHTML = "";
  selectedFiles.forEach((file, index) => {
    const reader = new FileReader();
    reader.onload = (e) => {
      const wrapper = document.createElement("div");
      wrapper.style.position = "relative";

      const img = document.createElement("img");
      img.src = e.target.result;
      img.style.width = "120px";
      img.style.borderRadius = "8px";

      const removeBtn = document.createElement("span");
      removeBtn.innerHTML = "✖";
      removeBtn.style.position = "absolute";
      removeBtn.style.top = "5px";
      removeBtn.style.right = "5px";
      removeBtn.style.cursor = "pointer";
      removeBtn.style.background = "rgba(0,0,0,0.7)";
      removeBtn.style.color = "white";
      removeBtn.style.padding = "2px 6px";
      removeBtn.style.borderRadius = "50%";

      removeBtn.onclick = () => {
        selectedFiles.splice(index, 1);
        updateFileInput();
      };

      wrapper.appendChild(img);
      wrapper.appendChild(removeBtn);
      previewContainer.appendChild(wrapper);
    };
    reader.readAsDataURL(file);
  });
}
</script>

</body>
</html>
